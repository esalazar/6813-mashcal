<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<title>MashCal</title>
		<link rel="stylesheet" href="http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.css" />
		<link rel="stylesheet" href="/style/default.css" />
		<link rel="stylesheet" href="/style/selector.css" />

		<!-- js frameworks -->
		<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
		<script type="text/javascript" src="http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.js"></script>
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"></script>

		<!-- our code -->
		<script type="text/javascript" src="/js/selector.js"></script>
		<script type="text/javascript" src="/js/display-contacts.js"></script>
	</head>
	<body>
		<div data-role="page" id="index">
			<div data-role="header">
				<a href="/index.html" data-icon="home" data-theme="b">Home</a>
				<h1>Schedule</h1>
			</div>
      <div data-role="content">
        <form id="respondform" action="/invite.html" method="post">
          <input type="hidden" name="event_id" value="<%= @event[:id] %>" />
          <input id="times" type="hidden" name="times" value="" />
        </form>
        <div id="respondselector"></div>
        <script>selectorize("#respondselector", false);</script>
        <% for @time in @times %>
          <script>
            var boom = <%= @time[:start_time] %>;
            $("#respondselector [date-ms='"+boom+"']").each(function() {
              $(this).addClass("selector-respond-selected");
            });
          </script>
        <% end %>
        <a data-role="button" href="#" onclick="clearSelector('#selector'); return false;">Clear all selected times</a>
			</div>
			<div data-role="footer">
				<span class="ui-title">
					<a href="event.html" class="ui-btn-left" data-role="button" data-theme="b" data-icon="arrow-l" data-inline="true">Create</a>
					<a href="#" onclick="formize('#selector');$('#form').submit();" class="ui-btn-right" data-role="button" data-theme="b" data-icon="arrow-r" data-inline="true" data-iconpos="right">Invite</a>
				</span>
			</div>
		</div>
  </body>
</html>

